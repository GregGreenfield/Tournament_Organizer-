#! /bin/bash

DB="web_use_db"
SYSTEMS="$DB web_use_daoserver web_use_webserver"
TEST_SYSTEMS="web_usability"

./scripts/get-compose-files --dev
./scripts/clean-and-build --dev $SYSTEMS $TEST_SYSTEMS

docker-compose up -d $SYSTEMS &> /dev/null

docker exec web_use_daoserver bash -c '/webapp/wait-for-postgres.sh web_use_db bash'
bash scripts/insert_into_db $DB database/data/dev/basic_functions.sql
bash scripts/insert_into_db $DB database/data/dev/web_usability_test_data.sql

docker-compose run web_usability
