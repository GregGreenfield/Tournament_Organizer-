# Go get the env_file used for the database
rm -f database/env_file
python -u scripts/make_database_env_file.py
cp database/env_file test/smoketester/env_file
rm -f database/env_file

# Build a container to run smoke tests on the other containers.
pushd test/smoketester
docker build -t smoketester .
popd

docker run -it --rm --link=webserver --link=daoserver --link=database \
    --env-file=test/smoketester/env_file smoketester

exit $?
